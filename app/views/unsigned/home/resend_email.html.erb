<%= stylesheet_link_tag "style", :media => "all" %>
<header class="clearfix">
<div class="span21 loginhdr" >
  <div class="span5">
    <%= link_to(image_tag("/img/homepage_logo.png"),root_path) %>
  </div>  
  
</div>
  
</header>
<div class="container">
  <div class="row-fluid">
    <div class="span20">
      <center>
      <div>&nbsp;<%= render "/shared/flash_messages" %></div>
      <%= form_tag(resend_email_click_unsigned_home_index_path, :method=>'post') do %>
        <h5>Please Enter Your Registered Email in order to Send Verfication Email Again...</h5>
        <br/>
        <label>Email: </label>
        <%= text_field_tag :email,'', :class => "input-large", :placeholder => "Email",:label =>"Email" %>
        <br/><br/>
        <%= submit_tag "Send Verification Again", :class => "btn btn-primary "%><br/>
        <%=link_to "Back to login page", root_path %>
      <% end %>
      </center>
    </div>
  </div>
</div>


